radius = 10

area = 3.14 * radius ** 2

print("The area of a circle with radius {} is {:.0f} meters square".format(radius, area))





print("8 + 6 = {}".format(8 + 6))

print("8 - 6 = {}".format(8 - 6))

print("8 * 6 = {}".format(8 * 6))

print("8 / 6 = {:.2f}".format(8 / 6))

print("8 % 6 = {}".format(8 % 6))

print("8 // 6 = {}".format(8 // 6))

print("8 ** 6 = {}".format(8 ** 6))



