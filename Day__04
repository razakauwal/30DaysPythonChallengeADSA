name = "Python For Everyone"

acronym = ""

words = name.split()

for word in words:

    acronym += word[0].upper()

print(acronym)





name = "Coding For All"

words = name.split()

acronym = ""

for word in words:

    acronym += word[0].upper()

print(acronym)





